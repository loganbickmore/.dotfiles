[colors]
background = ${xrdb:color0}
;background = 00ffffff
background-alt = ${xrdb:color0}
;background-alt = 00ffffff
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
primary = ${xrdb:color4}
secondary = #00aaff
alert = ${xrdb:color1}
battery-charging = #00aaff
battery-discharging = #ffaa00
battery-full = #00ffaa
highlight = ${xrdb:color1}
magenta = ${xrdb:color5}

[bar/top]
monitor = ${env:MONITOR:eDP1}
bottom = false
width = 100%
height = 25
offset-x = 0
offset-y = 0
;override-redirect = true
;radius = 6.0

background = ${colors.background}
foreground = ${colors.foreground}

;line-size = 2
;line-color = #f00

underline-size = 2
underline-color = ${colors.foreground}

;border-size = 20
;border-size = 10
;border-size = 0
;border-bottom-size = 0
;border-color = #00000000

padding-left = 0
padding-right = 0
margin-right = 5
module-margin-left = 0
module-margin-right = 0

font-0 = Noto:pixelsize=12;2
font-1 = FontAwesome:pixelsize=13;3
font-2 = Material Icons:pixelsize=13;3
font-3 = SpaceMono Nerd Font Mono:pixelsize=20;5
font-4 = Weather Icons:size=16;4
font-5 = Noto:pixelsize=12:weight=bold;2

fixed-center = true

modules-left = i3
modules-center = time
modules-right = volume battery powermenu
;modules-right = temperature volume wireless-network battery powermenu date weather-icon weather time
tray-position = right
tray-padding = 8

[module/xbacklight]
type = internal/xbacklight

[module/xwindow]
type = internal/xwindow
label = %title:0:120:...%
label-padding = 4

[module/i3]
type = internal/i3
strip-wsnumbers = true

[module/weather]
type = custom/script
exec = ~/scripts/openweathermap.sh
interval = 600
label-font = 0
format-background = ${colors.magenta}
format-foreground = ${colors.background}
format-padding = 0
click-left = chromium https://openweathermap.org/city/756135

[module/weather-icon]
type = custom/script
exec = ~/scripts/openweathermap-icon.sh
interval = 600
label-font = 5
format-background = ${colors.magenta}
format-foreground = ${colors.background}
format-padding = 4
click-left = chromium https://openweathermap.org/city/756135

[module/wireless-network]
type = internal/network
interface = wlp58s0
interval = 3.0

format-connected = <ramp-signal>  <label-connected>
;format-connected-underline = #9f78e1
label-connected = %{A:wpa_gui&:}online%{A}
label-connected-foreground = ${colors.foreground-alt}

format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %{A:wpa_gui&:}offline%{A}
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
#ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1.0
label-font = 0
date = "%A %d %b"
label = "%date%"
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding-right = 4
label-padding-left = 4
click-left = chromium https://calendar.google.com

[module/time]
type = internal/date
interval = 1.0

label = %time%  
time = %H:%M

label-padding-right = 4
label-padding-left = 4
label-margin = 0
label-font = 6

#format-background = ${colors.highlight}
#format-foreground = ${colors.background}
format-background = ${colors.background}
format-foreground = ${colors.magenta}


[module/redshift]
type = custom/script
interval = 5

exec = ~/.config/polybar/redshift.sh
click-left = ~/scripts/red.sh

[module/volume]
type = internal/volume

format-volume = <ramp-volume>  <label-volume>
format-voulme-padding = 0
format-volume-foreground = ${colors.foreground-alt}
label-volume = %percentage%

;format-muted-prefix = " "
format-muted = <label-muted>
format-muted-foreground = ${colors.foreground-alt}
label-muted = "mute"
format-muted-padding = 4

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-2 = 

format-volume-padding = 4

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 97
poll-interval = 5.0

format-charging = <animation-charging>  <label-charging>
format-charging-padding = 4

format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-padding = 4

format-full = <label-full>
format-full-padding = 4
format-full-foreground = ${colors.battery-full}

label-charging = %percentage%
label-discharging = %percentage%
label-full = 
label-charging-foreground = ${colors.foreground-alt}
label-discharging-foreground = ${colors.foreground-alt}
label-full-foreground = ${colors.foreground-alt}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
interval = 0.5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
warn-temperature = 60

format = <ramp>  <label>
format-warn = <ramp>  <label-warn>

label = %temperature%
label-foreground = ${colors.foreground-alt}
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

ramp-foreground = ${colors.foreground-alt}

[module/backlight]
type = internal/backlight

card = intel_backlight
enable-scroll = true

;format = <ramp><label>
format = <ramp>
label = %percentage%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/bluetooth]
type = custom/script
interval = 5

exec = ~/.config/polybar/bluetooth.sh

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.foreground-alt}
label-close = 
label-close-foreground = ${colors.foreground}
label-separator = " " 
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = 
menu-0-0-exec = reboot
menu-0-1 = 
menu-0-1-exec = systemctl poweroff
menu-0-2 = 
menu-0-2-exec = i3-msg exit

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

